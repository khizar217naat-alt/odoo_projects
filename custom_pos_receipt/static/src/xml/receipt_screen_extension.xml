<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <!-- Extend ReceiptScreen template -->
    <t t-name="point_of_sale.ReceiptScreen"
       t-inherit="point_of_sale.ReceiptScreen"
       t-inherit-mode="extension">

        <!-- Insert custom button and selects after Print Full Receipt -->
        <xpath expr="//div[@class='receipt-options d-flex flex-column gap-2']/div[@class='d-flex gap-1']" position="after">
            <div class="d-flex flex-column gap-2">
                <!-- Print Button -->
                <div class="d-flex gap-1">
                    <button class="button custom-print btn btn-lg btn-primary w-100 py-3"
                            t-on-click="() => doCustomPrint.call()">
                        <i t-attf-class="fa {{doCustomPrint.status === 'loading' ? 'fa-fw fa-spin fa-circle-o-notch' : 'fa-file-text'}} me-1"/> 
                        Custom Print
                    </button>
                </div>
            </div>
        </xpath>
    </t>
</templates>

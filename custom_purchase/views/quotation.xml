<odoo>
    <record id="action_quotation" model="ir.actions.act_window">
        <field name="name">Quotations</field>
        <field name="res_model">quotations</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_falcon_quotation"
              name="Quotations"
              parent="menu_falcon_pr_root"
              action="action_quotation"
              sequence="20"
    />
    <record id="view_quotation_list" model="ir.ui.view">
        <field name="name">quotation.list</field>
        <field name="model">quotations</field>
        <field name="arch" type="xml">
            <list string="Quotations">
                <field name="name"/>
                <field name="rfq_ref"/>
                <field name="quotation_date"/>
            </list>
        </field>
    </record>
    <!-- Form View -->
    <record id="view_quotation_form" model="ir.ui.view">
        <field name="name">quotation.form</field>
        <field name="model">quotations</field>
        <field name="arch" type="xml">
            <form string="Quotation">
                <sheet>
                    <!-- Header section -->
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="rfq_ref"/>
                            <field name="quotation_date"/>
                        </group>
                    </group>
                    <group>
                        <!-- Company Info (Left Side) -->
                        <group string="Company Information">
                            <field name="contact_person_company"/>
                            <field name="title_company"/>
                            <field name="email_company"/>
                            <field name="mobile_company"/>
                        </group>
                        <!-- Customer Info (Right Side) -->
                        <group string="Customer Information">
                            <field name="customer"/>
                            <field name="contact_person_customer"/>
                            <field name="title_customer"/>
                            <field name="email_customer"/>
                            <field name="mobile_customer"/>
                        </group>
                    </group>
                    <!-- Notebook Section -->
                    <notebook>
                        <page string="Products">
                            <field name="quotation_line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="uom_id"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="total_price" readonly="1"/>
                                </list>
                            </field>
                        </page>
                        <!-- New Terms and Conditions Page -->
                        <page string="Terms and Conditions">
                            <field name="terms_and_conditions" placeholder="Enter terms and conditions here..."/>
                        </page>
                        <!-- New Notes Page -->
                        <page string="Notes">
                            <field name="notes" placeholder="Add any additional notes here..."/>
                        </page>
                    </notebook>
                    <group style="float: right;">
                        <field name="total_amount" readonly="1"/>
                        <field name="vat_amount" readonly="1"/>
                        <field name="total_with_vat" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
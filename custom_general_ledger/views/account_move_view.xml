<odoo>
    <record id="view_move_form_inherit_vendor" model="ir.ui.view">
        <field name="name">account.move.form.inherit.vendor</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Insert inside Other Info tab -->
            <xpath expr="//page[@name='other_info']/group[@id='other_tab_group']" position="inside">
                <group name="vendor_customer_group" string="Vendor / Customer">
                    <field name="vendor_id" readonly="state != 'draft'"/>
                    <field name="project_id" readonly="state != 'draft'"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>

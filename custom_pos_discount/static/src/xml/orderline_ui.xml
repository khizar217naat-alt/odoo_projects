<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="custom_pos_add.Orderline" 
   t-inherit="point_of_sale.Orderline" 
   t-inherit-mode="extension">
        <xpath expr="//t[@t-slot='default']" position="after">
            <li class="custom-currency-off" t-if="props.line.discount_amount" >
                <span>Discount: </span>
                <t t-esc="props.line.discount_amount" />
            </li>
        </xpath>
    </t>
</templates>
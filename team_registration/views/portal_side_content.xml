<odoo>
    <template id="portal_side_content_inherit_referrals" inherit_id="portal.side_content"
        name="Portal Side Content Referrals">
        <xpath expr="//div[@t-attf-class]" position="inside">
            <!-- Show Referred By -->
            <t t-if="user_id.referred_by and user_id.company_id.show_coach">
                <p class="mt-3 mb-0 text-muted">
                    <i class="fa fa-user-circle" /> Referred by: <strong
                        t-out="user_id.referred_by.name" />
                </p>
                <div style="visibility: hidden; height: 0; overflow: hidden;"> Referred by: <strong>Some
                    very long fake referred T</strong>
                </div>
            </t>
            <t t-if="user_id.is_coach or user_id.is_nutritionist or user_id.is_owner">
                <!-- Show My Team button -->
                <t t-if="user_id.referred_users and user_id.company_id.show_team">
                    <a href="/my/team" class="btn btn-outline-primary mt-3">
                        <i class="fa fa-users" /> My Team </a>
                </t>
            </t>


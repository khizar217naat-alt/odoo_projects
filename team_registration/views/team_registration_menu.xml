<odoo>
  <record id="action_team_registration" model="ir.actions.act_window">
    <field name="name">Team Registration</field>
    <field name="res_model">team.registration</field>
    <field name="view_mode">list,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Submit your team registrations here.
      </p>
    </field>
  </record>

  <menuitem id="menu_team_registration_root" name="Team Registration" sequence="90"
    groups="team_registration.group_team_registration_manager,team_registration.group_commission_slices_manager"
    web_icon="team_registration,static/description/icon.png" />

  <menuitem id="menu_team_registration_sub" name="Submissions"
    parent="menu_team_registration_root"
    action="action_team_registration"
    groups="team_registration.group_team_registration_manager" />

  <menuitem id="menu_commission_slices_sub" name="Commissions"
    parent="menu_team_registration_root"
    action="action_commission_slices"
    groups="team_registration.group_commission_slices_manager" />

  <menuitem id="menu_commission_coach_period"
    name="Coach Periods"
    parent="menu_team_registration_root"
    action="action_coach_period_commission_track"
    groups="team_registration.group_commission_slices_manager" />
</odoo>

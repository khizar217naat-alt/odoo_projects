<odoo>
    <!-- Form View -->
    <record id="view_team_registration_form" model="ir.ui.view">
        <field name="name">team.registration.form</field>
        <field name="model">team.registration</field>
        <field name="arch" type="xml">
            <form string="Team Registration">
                <header>
                    <field name="state" widget="statusbar"/>
                    <button name="action_approve"
                            string="Approve"
                            type="object"
                            groups="team_registration.group_team_registration_manager"
                            invisible="state != 'draft'"
                            class="btn btn-primary"
                            style="background-color: purple; border-color: purple; color: white;"/>

                    <button name="action_cancel" type="object"
                            string="Cancel" class="btn btn-secondary"
                            invisible="state != 'draft'"/>

                </header>

                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="role"/>
                        <field name="years_experience"/>
                        <field name="fitness_center"/>
                        <field name="city"/>
                        <field name="address"/>
                        <field name="degree"/>
                        <field name="cert_file" filename="cert_filename" widget="binary"/>
                        <field name="referred_by" readonly="True"/>
                        <field name="invitation_link" readonly="1" widget="url"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_team_registration_list" model="ir.ui.view">
        <field name="name">team.registration.list</field>
        <field name="model">team.registration</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="phone"/>
                <field name="city"/>
                <field name="referred_by"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Action (ensure this is defined if not already) -->
    <record id="action_team_registration" model="ir.actions.act_window">
        <field name="name">Team Registrations</field>
        <field name="res_model">team.registration</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register new team members from website and approve them here.
            </p>
        </field>
    </record>

</odoo>

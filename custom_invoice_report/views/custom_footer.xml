<odoo>
    <template id="custom_footer">
        <!-- Embed Font Awesome 5 for PDF rendering -->
        <style>
            @font-face {
                font-family: 'FontAwesome';
                src: url(data:font/woff2;charset=utf-8;base64,AAEAAA...); /* Base64-encoded FontAwesome WOFF2 */
                font-weight: normal;
                font-style: normal;
            }
            .fa {
                font-family: 'FontAwesome';
            }
        </style>

        <div t-attf-class="footer o_company_#{company.id}_layout"
             style="margin:0 -20px; width:calc(100% + 40px);
                    border-bottom:15px solid #1765AB; padding:10px 0 5px 0; margin-top:60px;">

            <div class="d-flex justify-content-between"
                 style="text-align: center; margin-bottom: 8px; font-size:16px;">
                <div style="width:30%; text-align:left;">
                    <i class="fa fa-globe" style="color: #1765AB;"></i>
                    <span style="margin-left: 5px;">www.peptidat.com</span>
                </div>
                <div style="text-align:left;">
                    <i class="fa fa-phone" style="color: #1765AB;"></i>
                    <span style="margin-left: 5px;">+962 (06)4014974</span>
                </div>
                <div style="width:30%; text-align:left;">
                    <i class="fa fa-map-marker" style="color: #1765AB;"></i>
                    <span style="margin-left: 5px;">Jordan-Al-Salt - Industrial Area</span>
                </div>
            </div>

            <div class="d-flex justify-content-between"
                 style="gap: 10px; text-align: center; font-size:16px;">
                <div style="width:30%; text-align:left;">
                    <i class="fa fa-linkedin" style="color:#1765AB;"></i>
                    <span style="margin-left: 5px;">linkedin: peptidat-nutrition</span>
                </div>
                <div style="text-align:left;">
                    <i class="fa fa-mobile" style="color: #1765AB;"></i>
                    <span style="margin-left: 5px;">+962 79 1010655</span>
                </div>
                <div style="width:30%; text-align:left;">
                    <i class="fa fa-building" style="color: #1765AB;"></i>
                    <span style="margin-left: 5px;">Swifieh, Amman - Jordan</span>
                </div>
            </div>
        </div>
    </template>

    <!-- Footer replacements for all external layouts -->
    <template id="external_layout_standard_footer" inherit_id="web.external_layout_standard">
        <xpath expr="//div[contains(@t-attf-class,'footer')]" position="replace">
            <t t-call="custom_invoice_report.custom_footer"/>
        </xpath>
    </template>

    <template id="external_layout_boxed_footer" inherit_id="web.external_layout_boxed">
        <xpath expr="//div[contains(@t-attf-class,'footer')]" position="replace">
            <t t-call="custom_invoice_report.custom_footer"/>
        </xpath>
    </template>

    <template id="external_layout_bold_footer" inherit_id="web.external_layout_bold">
        <xpath expr="//div[contains(@t-attf-class,'footer')]" position="replace">
            <t t-call="custom_invoice_report.custom_footer"/>
        </xpath>
    </template>

    <template id="external_layout_striped_footer" inherit_id="web.external_layout_striped">
        <xpath expr="//div[contains(@t-attf-class,'footer')]" position="replace">
            <t t-call="custom_invoice_report.custom_footer"/>
        </xpath>
    </template>

    <template id="external_layout_bubble_footer" inherit_id="web.external_layout_bubble">
        <xpath expr="//div[contains(@t-attf-class,'footer')]" position="replace">
            <t t-call="custom_invoice_report.custom_footer"/>
        </xpath>
    </template>

    <template id="external_layout_wave_footer" inherit_id="web.external_layout_wave">
        <xpath expr="//div[contains(@t-attf-class,'footer')]" position="replace">
            <t t-call="custom_invoice_report.custom_footer"/>
        </xpath>
    </template>

    <template id="external_layout_folder_footer" inherit_id="web.external_layout_folder">
        <xpath expr="//div[contains(@t-attf-class,'footer')]" position="replace">
            <t t-call="custom_invoice_report.custom_footer"/>
        </xpath>
    </template>
</odoo>
